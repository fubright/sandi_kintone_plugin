{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es2020": true
  },
  "globals": {
    "kintone": "readonly",
    "cybozu": "readonly",
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/"
  ]
}